@model Travel.Models.Tour

<h2 class="mb-4">Add New Tour</h2>

<form id="tourForm" method="post" asp-action="Create" novalidate>
    <div class="form-group mb-3">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" required minlength="3" maxlength="100" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Location"></label>
        <input class="form-control" asp-for="Location" required />
        <span class="text-danger" asp-validation-for="Location"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" min="0.01" step="0.01" required />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="4"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DurationDays"></label>
        <input class="form-control" asp-for="DurationDays" type="number" min="1" max="365" required />
        <span class="text-danger" asp-validation-for="DurationDays"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" asp-for="ImageUrl" type="url" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Discount"></label>
        <input class="form-control" asp-for="Discount" type="number" min="0" max="100" step="0.01" />
        <span class="text-danger" asp-validation-for="Discount"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Latitude"></label>
        <input class="form-control" asp-for="Latitude" type="number" min="-90" max="90" step="0.000001" />
        <span class="text-danger" asp-validation-for="Latitude"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Longitude"></label>
        <input class="form-control" asp-for="Longitude" type="number" min="-180" max="180" step="0.000001" />
        <span class="text-danger" asp-validation-for="Longitude"></span>
    </div>

    <input type="hidden" asp-for="CarouselImages" id="carouselImagesField" />
    <div class="form-group mb-3">
        <label>Carousel Images (Comma Separated URLs)</label>
        <textarea class="form-control" id="carouselImages"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Tour</button>
</form>

<script>
    document.getElementById('tourForm').addEventListener('submit', function () {
        const carouselImages = document.getElementById('carouselImages').value;
        document.getElementById('carouselImagesField').value = carouselImages;
    });
</script>
