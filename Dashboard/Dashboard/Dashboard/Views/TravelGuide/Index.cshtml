@model IEnumerable<Travel.Models.TravelGuide>

<h2>Travel Guides</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guide in Model)
        {
            <tr>
                <td>@guide.Name</td>
                <td>@guide.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@guide.DestinationId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@guide.DestinationId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@guide.DestinationId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Guide</a>
