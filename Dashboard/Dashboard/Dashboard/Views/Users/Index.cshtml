@model IEnumerable<Travel.Models.ApplicationUser>

<h2>Manage Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a class="btn btn-sm btn-danger" href="/Users/Delete/@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
