@model IEnumerable<Travel.Models.Booking>

<h2 class="text-center my-4">Bookings</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tour</th>
                <th>User</th>
                <th>Date</th>
                <th class="text-center">Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.Tour.Name</td>
                    <td>@booking.User.FullName</td>
                    <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                    <td class="text-center">
                        <span class="badge bg-@(booking.IsConfirmed ? "success" : "warning")">
                            @(booking.IsConfirmed ? "Confirmed" : "Pending")
                        </span>
                    </td>
                    <td class="text-end">
                        <button class="btn btn-sm btn-primary me-2">View</button>
                        <button class="btn btn-sm btn-danger">Cancel</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
